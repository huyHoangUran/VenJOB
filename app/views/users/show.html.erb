<div class="container-fluid">
  <h1>My Page</h1>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="text" name="email" id="email" autofocus="true" autocomplete="name" value="<%= @user.email %>" class="form-control form-control-sm bg-info bg-opacity-10 border border-primary" readonly> 
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" name="name" id="email" autofocus="true" autocomplete="name" value="<%= @user.name %>" class="form-control form-control-sm bg-info bg-opacity-10 border border-primary" readonly>
    <% if @user.my_cv.present? %>
      <p>CV: <%= link_to File.basename(@user.my_cv.path), @user.my_cv.url, target: '_blank', download: File.basename(@user.my_cv.path) %></p>
    <% else %>
      <p>CV không tồn tại</p>
    <% end %>
    <div class="row">
      <div  class="btn btn-danger  col-md-4">
        <%= link_to 'Update', edit_user_registration_path, :class =>"col-md-4 btn btn-danger" %>
      </div>
      <div  class="col-md-4">
      </div>
      <div  class="btn btn-danger  col-md-4">
        <%= link_to 'My Jobs', my_jobs_path, :class =>"col-md-4 btn btn-prymary" %>
      </div>
      
    </div>
  </div>
</div>
