<%= form_with(model: @applied, url: applies_path, method: :post) do |form| %>

  <%= form.label :email %>
  <%= form.text_field :email %>
  
  <%= form.label :fullname %>
  <%= form.text_field :fullname %>
  
  <%= form.label :cv %>
  <%= form.text_area :cv, value: current_user.my_cv %>
  
  <%= form.submit 'Done' %>
<% end %>

