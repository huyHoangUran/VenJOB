

<div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="col-md-4 p-5 shadow-sm border rounded-5 border-primary">
      <h2 class="text-center mb-4 text-primary">Login</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-info bg-opacity-10 border border-primary" %>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control bg-info bg-opacity-10 border border-primary" %>

        </div>
        <div class="mb-3">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
        <div class="actions d-grid mb-3">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
</div>    
